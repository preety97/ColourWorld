<ScrollView android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="none"
    android:background="@drawable/bcup"
    android:scrollbarStyle="outsideInset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:foreground="@drawable/rem"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                app:cardCornerRadius="3sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="200dp">
                <ss.com.bannerslider.views.BannerSlider
                    android:id="@+id/banner_slider1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:animateIndicators="true"
                    app:defaultIndicators="round_square"
                    app:interval="2000"
                    app:loopSlides="true" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:foreground="@drawable/rem"
                    android:background="@drawable/reglayr"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/reg"
                    android:id="@+id/regimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/logimg"
                    android:foreground="@drawable/rem"
                    android:background="@drawable/reglayr"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/regtext"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="cursive"
                    android:textSize="30dp"
                    android:text="Register Now"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/logtext"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="cursive"
                    android:textSize="30dp"
                    android:layout_marginLeft="40dp"
                    android:text=" Login Here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:foreground="@drawable/rem"
                    android:background="@drawable/reglayr"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/abc"
                    android:id="@+id/prodimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/cartimg"
                    android:foreground="@drawable/rem"
                    android:background="@drawable/reglayr"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/carty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cattext"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="cursive"
                    android:textSize="30dp"
                    android:text="PRODUCTS"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/carttext"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:fontFamily="cursive"
                    android:textSize="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="SHOP NOW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:scrollbars="vertical"
                android:foreground="@drawable/btn"

                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bcup1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="210dp">

                    <ImageView
                        android:id="@+id/toolimg"
                        android:src="@drawable/toolkit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                <TextView
                        android:id="@+id/tooltext"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="100dp"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="TOOLS"

                        android:fontFamily="cursive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginLeft="130dp"
                android:fontFamily="cursive"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Contact us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fn"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/mobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/em"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/emil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>